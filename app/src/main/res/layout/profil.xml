<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/fotoprofil"
        android:layout_width="122dp"
        android:layout_height="123dp"
        android:layout_marginBottom="527dp"
        android:contentDescription="@string/fotoprofil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.636"
        app:srcCompat="@drawable/fotoprofil"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/namauser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/namauser"
        android:textColor="#309CFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toEndOf="@+id/fotoprofil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/lokasi"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_marginBottom="572dp"
        android:contentDescription="@string/simbollokasi_homepage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/namauser"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toEndOf="@+id/fotoprofil"
        app:layout_constraintTop_toBottomOf="@+id/namauser"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lokasi" />

    <TextView
        android:id="@+id/lokasiuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="576dp"
        android:text="@string/namadaerah_homepage"
        android:textColor="#454545"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lokasi"
        app:layout_constraintTop_toBottomOf="@+id/namauser"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="463dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoprofil"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:background="@drawable/boxwithblueborder"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/saldouserprofil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/outfit_bold"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="@string/saldo_profil"
                    android:textSize="20sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/jumlahsaldoprofil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/outfit_bold"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/jumlahsaldoprofil"
                    android:textColor="@color/blue"
                    android:textSize="21sp"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pointuserprofil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/outfit_bold"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="@string/point_profil"
                    android:textSize="20sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/jumlahpointprofil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/outfit_bold"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/jumlahpointprofil"
                    android:textColor="@color/blue"
                    android:textSize="21sp"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/biodatasayaprofil"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/outfit_medium"
            android:text="@string/biodatauser"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ubahpasswordprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubahpassword"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/topupprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topup"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/outfit_medium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vouchersayaprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vouchersaya"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/outfit_medium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/historypemesananprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/historypemesanan"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/outfit_medium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tentangkamiprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tentangkami"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/outfit_medium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hubungikamiprofil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hubungikami"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/outfit_medium"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnkeluarprofil"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:backgroundTint="#DEB41D"
            android:text="@string/keluar"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/statusmember"
        android:layout_width="114dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/membergold"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/statusmember"
        android:textColor="#DEB41D"
        app:layout_constraintEnd_toEndOf="@+id/lokasi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lokasi"
        app:layout_constraintTop_toBottomOf="@+id/lokasi"
        tools:ignore="TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>